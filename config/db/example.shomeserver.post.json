{
  "dbserver": {
    "port": 50860
  },
  "shomeserver": {
    "port": 50870,
    "log_level": "debug",
    "log_file": "~/.logs/shomeserver.log",
    "plugin_path": "~/.config/shomeserver/plugins"
  },
  "plugin@pi_rgb": {
    "log_level": "${shomeserver:log_level}",
    "log_file": "~/.logs/shomeserver.pi_rgb.log",
    "range": 255,
    "default": [255,255,255,255]
  },
  "plugin@pi_pir_motion": {
    "log_level": "${shomeserver:log_level}",
    "log_file": "~/.logs/shomeserver.pi_pir_motion.log"
  },
  "plugin@mpv": {
    "log_level": "${shomeserver:log_level}",
    "log_file": "~/.logs/shomeserver.mpv.log"
  }
}
